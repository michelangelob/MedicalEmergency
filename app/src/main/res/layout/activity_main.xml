<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/layout_padding_bottom"
        android:paddingLeft="@dimen/layout_padding_left"
        android:paddingRight="@dimen/layout_padding_right"
        android:paddingTop="@dimen/layout_padding_top"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/TitleMainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_bottom"
            android:textSize="@dimen/activity_large"
            android:text="@string/TitleMain"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/DescriptionMainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_bottom"
            android:textSize="@dimen/activity_text_description"
            android:text="@string/DescriptionMain" />

        <Button
            android:id="@+id/GoMainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:onClick="Go"
            android:text="@string/GoMainButton" />

    </LinearLayout>
</ScrollView>